<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dbe2ef"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:title="模擬テスト" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:text="出題範囲"
            android:textColor="@android:color/black"
            android:textSize="22sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="すべて"
                android:textSize="23dp"></CheckBox>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkJoutai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物質の状態"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkJoutaiKousei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="物質の状態・構成"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkKitai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="気体・溶液の性質"

                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkKotai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="固体の性質　　　"
                        android:textSize="14dp"></CheckBox>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkHannouHeikou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物質の反応・平衡"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkSankakangenhannou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="酸化還元反応　　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkDenkibunkai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="電気分解・電池　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkNetukagaku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="熱化学　　　　　"
                        android:textSize="14dp"></CheckBox>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkMuki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="無機物質"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkHikinzoku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="非金属元素　　　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkKinzoku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="金属元素　　　　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkIon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="金属イオンの沈殿"
                        android:textSize="14dp"></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkYuki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有機化合物"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkYukikagoubutu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="有機化合物　　　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkHoukou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="芳香族化合物　　"
                        android:textSize="14dp"></CheckBox>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkKoubunsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高分子化合物"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkTennen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="天然高分子化合物"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkGousei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="合成高分子化合物"
                        android:textSize="14dp"></CheckBox>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkHousoku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法則"
                        android:textSize="20dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkKougyoutekiseihou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="工業的製法　　　"
                        android:textSize="14dp"></CheckBox>

                    <CheckBox
                        android:id="@+id/checkHousokumondai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="法則　　　　　　"
                        android:textSize="14dp"></CheckBox>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:text="出題数"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:text="－"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/numText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="10"
                android:textSize="45dp" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/round"
                android:gravity="center"
                android:text="＋"
                android:textColor="@android:color/white"
                android:textSize="25dp" />


        </LinearLayout>

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/flame"
            android:gravity="center"
            android:text="@string/kaisi"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>