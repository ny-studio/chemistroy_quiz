<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:showAsAction="never"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:minHeight="?attr/actionBarSize"
            android:background="#dbe2ef"
            >
        </androidx.appcompat.widget.Toolbar>


        <Button
            android:id="@+id/joutaiheikou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物質の状態"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <Button
            android:id="@+id/hannou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物質の反応･平衡"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <Button
            android:id="@+id/muki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="無機物質"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/yuki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="有機化合物"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/koubunsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="高分子化合物"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/housoku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="法則"
            android:textColor="@android:color/white"
            android:background="@drawable/flame"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            />

        <Button
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/flame_white"
            android:textColor="@android:color/black"
            android:text="模 擬 テ ス ト"
            android:textSize="28sp" />


    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/ads_banner">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>